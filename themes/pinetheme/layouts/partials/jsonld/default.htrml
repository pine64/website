{{- $desc := (or .Description .Summary site.Params.description) | plainify | htmlUnescape }}
{{- $data := dict
    "@context" "https://schema.org"
    "@type" "WebPage"
    "name" .Title
    "description" $desc
    "url" .Permalink
}}
<script type="application/ld+json">
{{ $data | jsonify | safeJS }}
</script>